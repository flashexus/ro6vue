<body class="login vl-bodyBg">
  <div class="vl-mainBg cover-container d-flex w-100 mx-auto flex-column pt-5">
    <header class="vl-appTop-header">
      <div class="vl-appTitle d-flex justify-content-center container">
        <h1><%= image_tag "image_stamps/App_titlelogo_color_futi.png",{ alt:"石見周遊スタンプラリー いわみくるり",width:"300", height:"100"} %></h1>
      </div>
    </header>
    <div class="vl-contentsWrap container">
      <div class="vl-enterBlock rounded m-auto card shadow">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control',placeholder:"メールアドレスを入力" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control',placeholder:"パスワードを入力" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="form-group form-check">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= f.label :remember_me, class: 'form-check-label' do %>
                <%= resource.class.human_attribute_name('remember_me') %>
              <% end %>
            </div>
          <% end %>
          <div class="form-group ">
            <%= f.submit  t('.sign_in'), class: 'btn btn-main-color btn-lg btn-block' %>
          </div>
        <% end %>
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
  <footer class="vl-footer py-3 text-center">
    <small><a href="https://www.all-iwami.com/contents/stamprally/" class="text-white txt-sh">©いわみくるり</a></small>
  </footer>
</body>
<script>
$(function () {
var num = Math.ceil(3 * Math.random());
 $('.vl-mainBg').addClass('main-bg' + num);
});
</script>