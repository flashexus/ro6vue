<% set_meta_tags title: 'スタンプ取得状況', description: 'スタンプ取得状況' %>
<%= stylesheet_link_tag 'map', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= stylesheet_pack_tag 'map', media: 'all', 'data-turbolinks-track': 'reload' %>

<body class="qr vl-bodyBg login-user">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <header class="vl-appTop-header py-3">
   <div class="vl-appTitle d-flex justify-content-center container">
    <p>いわみくるり<span>石見周遊スタンプラリー</span></p>
   </div>
  </header>

  <div class="container">
    <div class="vl-userName"><i class="fas fa-smile"></i> <%= current_user.username %></div>
    <div class="col-8">
      <button type="button" class="btn btn-info" id="getPosbtn01" name="getPosbtn01">現在位置</button>
    </div>

    <div class="vl-contentsWrap">
      <div class="vl-contentBlock rounded m-auto bg-white card">

        <div class="card-header">
          <h1 class="text-main-color">地点一覧</h1>
        </div>

        <div class="vl-cardWrap">
          <ul class="nav nav-tabs vl-tabWrap justify-content-center nav-pills" role="tablist">
            <li class="nav-item sekisei">
              <a class="nav-link" id="item1-tab" data-toggle="tab" href="#item1" role="tab" aria-controls="item1" aria-selected="false">石西エリア</a>
            </li>
            <li class="nav-item sekiou">
              <a class="nav-link" id="item2-tab" data-toggle="tab" href="#item2" role="tab" aria-controls="item2" aria-selected="false">石央エリア</a>
            </li>
            <li class="nav-item sekitou">
              <a class="nav-link" id="item3-tab" data-toggle="tab" href="#item3" role="tab" aria-controls="item3" aria-selected="false">石東エリア</a>
            </li>
          </ul><!-- / .nav-tabs -->

          <div id="resize_area" class="row mt-1" >
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 main">
              <div id="map" class="gmap"></div>
            </div>
          </div>

          <div class="row mt-4">
            <div class="table-responsive vl-spotList" >
              <table class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>施設名</th>
                    <th>住所</th>
                    <th>分類</th>
                  </tr>
                </thead>
                <tbody id="change">
                  <%= render( partial: 'shop_table', locals: {points: @points}) %>
                </tbody>
              </table>
            </div>
          </div>
        </div><!-- / .vl-cardWrap -->
      </div><!-- / .vl-enterBlock -->
    </div><!-- / .vl-enterWrap -->
  </div><!-- / .container -->
  <%= render('shared/menu') %>
</body>
<%= javascript_pack_tag 'map' %> 
