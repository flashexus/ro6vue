<%= stylesheet_link_tag 'map', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= stylesheet_pack_tag 'map', media: 'all', 'data-turbolinks-track': 'reload' %>

<body class="qr vl-bodyBg login-user">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <header class="vl-appTop-header py-3">
   <div class="vl-appTitle d-flex justify-content-center container">
    <p>いわみくるり<span>石見周遊スタンプラリー</span></p>
   </div>
  </header>

<div class="container">
  <div class="row mt-4">
    <div class="col-6 input-group mb-3">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect01">エリア選択</label>
      </div>
      <select class="custom-select" id="inputGroupSelect01" name="inputGroupSelect01">
        <option selected>Choose...</option>
        <% @area_pos.each do |key,value| %>
          <option value=<%= key %>><%= key %></option>
        <% end -%>
      </select>
    </div>
    <div class="col-5">
      <button type="button" class="btn btn-info" id="getPosbtn01" name="getPosbtn01">現在位置</button>
    </div>
    <div class="col-1"><i class="fas fa-smile"></i> <%= current_user.username %></div>
  </div>

  <div id="resize_area" class="row mt-4" >
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 main">
      <div id="map" class="gmap"></div>
    </div>
  </div>
  <div class="row mt-4">
    <h2 class="font-weight-bold">施設一覧</h2>
    <table class="table table-responsive">
      <thead>
        <tr>
          <th>Name</th>
          <th>Desc</th>
          <th>Lon</th>
          <th>Lat</th>
          <th>Links</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @points.each do |point| %>
          <tr>
            <td><%= point.name %></td>
            <td><%= point.desc %></td>
            <td><%= point.lon %></td>
            <td><%= point.lat %></td>
            <td><%= point.path %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
</div>
  <%= render('shared/menu') %>
</body>
<%= javascript_pack_tag 'map' %> 
